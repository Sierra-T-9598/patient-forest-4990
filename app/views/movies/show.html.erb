<h1><%=@movie.title%></h1>

<p>Creation Year: <%= @movie.creation_year %></p>
<p>Genre: <%= @movie.genre %></p>
<p>Actors:</p>
<%@movie.actors.by_age.each do |actor| %>
  <p><%=actor.name%></p>
<% end %>

<h2>Average age of actors: <%= @movie.actors.average_age%></h2>

<h2>Add an actor for <%=@movie.title%>:</h2>

<%= form_with url: "/movies/#{@movie.id}/actors/new", method: :post, local: true do |form| %>
  <p><%= form.label :name %>
  <%= form.text_field :name %></p>

  <p><%= form.label :age%>
  <%= form.text_field :age%></p>

  <p><%=form.submit "Submit"%></p>
<% end %>
